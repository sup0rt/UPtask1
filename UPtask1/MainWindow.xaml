<Window x:Class="UPtask1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UPtask1"
        mc:Ignorable="d"
        Height="450" Width="800"
        Loaded="Window_Loaded"
        Title="">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>


        <Button  x:Name="btnExit" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Выйти" Style="{StaticResource ButtonStyle}" Click="btnExit_Click"  />
        <Frame x:Name="MainFrame" Grid.Row="1" Source="pages/AuthPage.xaml" NavigationUIVisibility="Hidden" />
        <TextBlock Grid.Row="2" x:Name="tbDateTimeNow" VerticalAlignment="Center" Text="" HorizontalAlignment="Right" Style="{StaticResource LinkTextBlockStyle}"  />
    </Grid>
</Window>
