<Window x:Class="UPtask1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UPtask1"
        xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
        mc:Ignorable="d"
        Height="650" Width="900"
        Loaded="Window_Loaded"
        Title="">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnBack" Content="Назад" Style="{StaticResource ButtonStyle}" Click="btnBack_Click" 
                    Margin="5,0" IsEnabled="False" />
            <Button x:Name="btnExit" Content="Выйти" Style="{StaticResource ButtonStyle}" Click="btnExit_Click" 
                    Margin="5,0" />
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Row="1" Source="pages/AuthPage.xaml" NavigationUIVisibility="Hidden" />
        <TextBlock Grid.Row="2" x:Name="tbDateTimeNow" VerticalAlignment="Center" Text="" HorizontalAlignment="Right" 
                   Style="{StaticResource LinkTextBlockStyle}" />
    </Grid>
</Window>