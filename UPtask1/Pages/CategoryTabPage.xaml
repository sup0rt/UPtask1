<Page x:Class="UPtask1.Pages.CategoryTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPtask1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryTabPage" Style="{StaticResource PageStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="377*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="DataGridCategory" 
AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Категория" Binding="{Binding 
Name}" Width="300"/>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ButtonEdit" Content="Реактировать" 
ToolTip="Редактировать данные" Click="ButtonEdit_Click"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="1" x:Name="ButtonAdd" ToolTip="Добавить данные" 
Content="Добавить" HorizontalAlignment="Left" Click="ButtonAdd_Click" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="1" x:Name="ButtonDel" ToolTip="Удалить данные" 
Content="Удалить" HorizontalAlignment="Right" Click="ButtonDel_Click" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="1" x:Name="ButtonBack" ToolTip="Назад" 
Content="Назад" HorizontalAlignment="Center"  Click="ButtonBack_Click" Style="{StaticResource ButtonStyle}"/>
    </Grid>
</Page>
