<Page x:Class="UPtask1.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPtask1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUserPage" Style="{StaticResource PageStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Логин"
                   Grid.Row="0"
                   Grid.Column="0"
                   Margin="10,0,0,0"
                   FontSize="20" Style="{StaticResource LinkTextBlockStyle}"/>
        <TextBlock Text="Пароль"
                   Grid.Row="1"
                   Grid.Column="0"
                   Margin="10,0,0,0"
                   FontSize="20" Style="{StaticResource LinkTextBlockStyle}"/>
        <TextBlock Text="ФИО"
                   Grid.Row="2"
                   Grid.Column="0"
                   Margin="10,0,0,0"
                   FontSize="20" Style="{StaticResource LinkTextBlockStyle}"/>
        <TextBlock Text="Фото"
                   Grid.Row="3"
                   Grid.Column="0"
                   Margin="10,0,0,0"
                   FontSize="20" Height="75" VerticalAlignment="Bottom" Style="{StaticResource LinkTextBlockStyle}"/>
        <TextBox x:Name="TBLogin"
                 Grid.Row="0"
                 ToolTip="Введите логин"
                 Grid.Column="1"
                 Margin="156,5,71,5" Style="{StaticResource TextBoxStyle}"/>
        <TextBox x:Name="TBPass"
                 Grid.Row="1"
                 ToolTip="Введите пароль"
                 Grid.Column="1"
                 Margin="156,5,71,5" Style="{StaticResource TextBoxStyle}"/>
        <TextBox x:Name="TBFio"
                 Text="{Binding FIO}"
                 Grid.Row="2"
                 ToolTip="Введите ФИО"
                 Grid.Column="1"
                 Margin="156,5,71,5" Style="{StaticResource TextBoxStyle}"/>
        <TextBox x:Name="TBPhoto"
                 Text="{Binding Photo}"
                 Grid.Row="3"
                 ToolTip="Добавьте фото"
                 Grid.Column="1"
                 Margin="156,5,71,5" TextChanged="TBPhoto_TextChanged" />
        <Button x:Name="ButtonSave"
                Content="Сохранить"
                Grid.Row="4"
                Click="ButtonSave_Click"
                Grid.ColumnSpan="2"
                Margin="0,0,50,0"
                HorizontalAlignment="Right" Style="{StaticResource ButtonStyle}"/>
        <Button x:Name="ButtonClean"
                Content="Очистить"
                Grid.Row="4"
                Click="ButtonClean_Click"
                Grid.ColumnSpan="2"
                Margin="50,0,0,0"
                HorizontalAlignment="Left" Style="{StaticResource ButtonStyle}"/>
    </Grid>
</Page>