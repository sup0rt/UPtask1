<Page x:Class="UPtask1.Pages.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPtask1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUserPage" Style="{StaticResource PageStyle}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Поля для Account -->
        <TextBlock Text="Логин" Grid.Row="0" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TBLogin" Grid.Row="0" Grid.Column="1" Margin="5" ToolTip="Введите логин" 
                 Text="{Binding CurrentAccount.Login, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Пароль" Grid.Row="1" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TBPass" Grid.Row="1" Grid.Column="1" Margin="5" ToolTip="Введите пароль" 
                 Text="{Binding CurrentAccount.Password, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Роль" Grid.Row="2" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="cmbRole" Grid.Row="2" Grid.Column="1" Margin="5" ToolTip="Выберите роль" 
                  SelectedValue="{Binding CurrentAccount.Role, UpdateSourceTrigger=PropertyChanged}"
                  SelectedValuePath="Content">
            <ComboBoxItem>Admin</ComboBoxItem>
            <!-- Убрал Content="1", используем только содержимое -->
            <ComboBoxItem>User</ComboBoxItem>
            <!-- Убрал Content="2" -->
        </ComboBox>

        <!-- Поля для User -->
        <TextBlock Text="ФИО" Grid.Row="3" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TBFio" Grid.Row="3" Grid.Column="1" Margin="5" ToolTip="Введите ФИО" 
                 Text="{Binding CurrentUser.FIO, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Text="Фото (необязательно)" Grid.Row="4" Grid.Column="0" FontSize="16" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="TBPhoto" Grid.Row="4" Grid.Column="1" Margin="5" ToolTip="Путь к фото" 
                 Text="{Binding CurrentUser.Photo, UpdateSourceTrigger=PropertyChanged}" />

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="ButtonClean" Content="Очистить" Width="100" Margin="5" Click="ButtonClean_Click"/>
            <Button x:Name="ButtonSave" Content="Сохранить" Width="100" Margin="5" Click="ButtonSave_Click"/>
        </StackPanel>
    </Grid>
</Page>