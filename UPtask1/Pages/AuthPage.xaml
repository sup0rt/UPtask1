<Page x:Class="UPtask1.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPtask1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница авторизации"
      Style="{StaticResource PageStyle}">

    <Grid>
        

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label Content="Логин" Style="{StaticResource LabelStyle}" />
            <TextBox x:Name="TbUsername" Style="{StaticResource TextBoxStyle}" />
            <Label Content="Пароль" Style="{StaticResource LabelStyle}" />
            <PasswordBox x:Name="PbPassword" Style="{StaticResource PasswordBoxStyle}" />
            <Button x:Name="btgLogin" Grid.Row="2" Grid.Column="1" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btgLogin_Click" Style="{StaticResource ButtonStyle}" />

            <TextBlock Style="{StaticResource LinkTextBlockStyle}" >
                Нет аккаунта? 
                <Hyperlink  TextDecorations="Underline" Click="Hyperlink_Click" Style="{StaticResource HyperlinkStyle}" >
                    Зарегистрируйтесь
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
