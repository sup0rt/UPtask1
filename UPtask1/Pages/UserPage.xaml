<Page x:Class="UPtask1.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPtask1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage"
      Style="{StaticResource PageStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Ввод ФИО для поиска:" FontSize="9" VerticalAlignment="Center" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="tbFioFilter" Margin="5" MinWidth="100" MaxWidth="100" Style="{StaticResource TextBoxStyle}" TextChanged="tbFioFilter_TextChanged" Width="100" />
            <Label Content="Сортировка по ФИО:" Margin="5" FontSize="9" VerticalAlignment="Center" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="cmbSort"  Margin="5"  SelectedIndex="0" VerticalContentAlignment="Center" VerticalAlignment="Center" SelectionChanged="cmbSort_SelectionChanged">
                <ComboBoxItem Content="По возрастанию"/>
                <ComboBoxItem Content="По убыванию"/>
            </ComboBox>
            <CheckBox  x:Name="cbAdminOnly" Margin="5" IsChecked="False" Content="Только администраторы" VerticalContentAlignment="Center" Checked="onlyAdminCheckBox_Checked" Unchecked="onlyAdminCheckBox_Unchecked" />
            <Button x:Name="btnClearFilters" Content="Очистить фильтры" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource ButtonStyle}" Click="btnClearFilters_Click" />
        </WrapPanel>

        <ListView Name="ListUser" Grid.Row="1"
HorizontalContentAlignment="Center"
ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>

                    <WrapPanel Orientation="Horizontal"
HorizontalAlignment="Center">

                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="200"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Width="200" Grid.Row="1" Stretch="UniformToFill" HorizontalAlignment="Center">
                            <Image.Source>
                                <Binding Path="Photo">
                                    <Binding.TargetNullValue>
                                        <ImageSource>
                                            /Photos/default.jpg
                                        </ImageSource>
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>

                        <TextBlock VerticalAlignment="Center" TextAlignment="Center" Width="200" Grid.Row="0" TextWrapping="Wrap" Text="{Binding FIO}" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold"/>
                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" Width="200" Grid.Row="2" HorizontalAlignment="Center" FontSize="18" Text="{Binding Role}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
