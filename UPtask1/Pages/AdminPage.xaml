<Page x:Class="UPtask1.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UPtask1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница администратора"
      Style="{StaticResource PageStyle}">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnTab1" Content="Таблица пользователей" 
HorizontalAlignment="Center" VerticalAlignment="Top"  
Click="BtnTab1_Click" Style="{StaticResource ButtonStyle}" />
        <Button x:Name="BtnTab2" Content="Таблица категорий" 
HorizontalAlignment="Center" VerticalAlignment="Top"  
Click="BtnTab2_Click" Style="{StaticResource ButtonStyle}" />
        <Button x:Name="BtnTab3" Content="Таблица платежей" 
HorizontalAlignment="Center" VerticalAlignment="Top"  
Click="BtnTab3_Click" Style="{StaticResource ButtonStyle}" />
        <Button x:Name="BtnTab4" Content="Диаграммы" 
HorizontalAlignment="Center" VerticalAlignment="Top"  
Click="BtnTab4_Click" Style="{StaticResource ButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>
