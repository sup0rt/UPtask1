<Page x:Class="UPtask1.Pages.UsersTabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:context="clr-namespace:UPtask1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersTabPage" Style="{StaticResource PageStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="377*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="DataGridUser" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Extended"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                  Binding="{Binding ID}" 
                                  Width="50"/>
                <DataGridTextColumn Header="ФИО" 
                                  Binding="{Binding FIO}" 
                                  Width="200"/>
                <DataGridTextColumn Header="Фото" 
                                  Binding="{Binding Photo}" 
                                  Width="150"/>
                <DataGridTextColumn Header="Логин" 
                                  Binding="{Binding Account1.Login}" 
                                  Width="100"/>
                <DataGridTextColumn Header="Пароль" 
                                  Binding="{Binding Account1.Password}" 
                                  Width="100"/>
                <DataGridTextColumn Header="Роль" 
                                  Binding="{Binding Account1.Role}" 
                                  Width="80"/>
                <DataGridTemplateColumn Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="ButtonEdit" 
                                   Content="Редактировать" 
                                   ToolTip="Редактировать данные" 
                                   Click="ButtonEdit_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                   HorizontalAlignment="Stretch" Margin="10">
            <Button x:Name="ButtonAdd" 
                   ToolTip="Добавить данные" 
                   Content="Добавить" 
                   Margin="0,0,10,0" 
                   Click="ButtonAdd_Click"/>
            <Button x:Name="ButtonDel" 
                   ToolTip="Удалить данные" 
                   Content="Удалить" 
                   HorizontalAlignment="Right" 
                   Click="ButtonDel_Click"/>
        </StackPanel>
    </Grid>
</Page>